{
  "extends": "next/core-web-vitals",
  "rules": {
    // Общие правила
    "eqeqeq": ["error", "always"], // Используйте строгое равенство
    "no-console": "warn", // Предупреждение при использовании console.log()
    "no-unused-vars": ["warn", { "argsIgnorePattern": "^_" }], // Предупреждение о неиспользуемых переменных, игнорируя аргументы, начинающиеся с _
    "react/react-in-jsx-scope": "off", // Не требуется в Next.js, так как React автоматически импортируется
    "react/prop-types": "off", // Если вы используете TypeScript, можете отключить проверку PropTypes
    "jsx-a11y/alt-text": "warn", // Предупреждение, если у изображений отсутствует alt-текст
    "jsx-a11y/anchor-is-valid": "warn", // Предупреждение, если ссылки не имеют валидных атрибутов
    "import/prefer-default-export": "off", // Отключение правила, требующего экспортировать по умолчанию, если есть только один экспорт
    "indent": ["error", 2], // Используйте 2 пробела для отступов
    "quotes": ["error", "single"], // Используйте одинарные кавычки
    "semi": ["error", "always"] // Всегда используйте точку с запятой
  },
  "settings": {
    "react": {
      "version": "detect" // Автоматически определяет версию React
    }
  }
}
